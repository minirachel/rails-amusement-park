

<%= form_tag ('/signin') do %>
    <div class="form-group">
        <%= label_tag(:name, "Name:") %>
        <%= collection_select(:user, :name, User.all, :name, :name) %>
    </div>

    <div class="form-group">
        <%= label_tag(:password, "Password:") %>
        <%= password_field_tag(:password) %>
    </div>

    <div class="actions">
        <%= submit_tag("Sign In") %>
    </div>

<% end %>